@model IEnumerable<SpartaMensProduct.Models.Product>

@{
    ViewBag.Title = "Product List";
}

<div class="container mt-4">
    <h2>Product List</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Category</td>
                <td>@product.Description</td>
                <td>
                    <a href="@Url.Action("EditProduct", "Admin", new { id = product.ProductId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteProduct", "Admin", new { id = product.ProductId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Create", "Product")" class="btn btn-primary">Add New Product</a>
</div>
