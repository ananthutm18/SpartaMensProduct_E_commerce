@model SpartaMensProduct.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<div class="container mt-4">
    <h2>Delete Product</h2>
    <div class="alert alert-warning">
        <p>Are you sure you want to delete this product?</p>
        <p><strong>@Model.ProductName</strong></p>
        <form action="@Url.Action("DeleteConfirmed", "Admin")" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ProductId)
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("ProductList", "Admin")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
