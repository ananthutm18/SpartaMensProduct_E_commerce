@model IEnumerable<SpartaMensProduct.Models.User>

@{
    ViewBag.Title = "All Users";
}

<h2>All Users</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>UserId</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>IsAdmin</th>
            <th>DateOfBirth</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>PhoneNumber</th>
            <th>CreatedAt</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.UserId</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.IsAdmin</td>
            <td>@user.DateOfBirth.ToShortDateString()</td>
            <td>@user.Address</td>
            <td>@user.City</td>
            <td>@user.State</td>
            <td>@user.PhoneNumber</td>
            <td>@user.CreatedAt.ToShortDateString()</td>
            <td>
                @if (user.ImageData != null)
                    {
                <img src="data:image/png;base64,@Convert.ToBase64String(user.ImageData)" alt="User Image" width="50" height="50" />
                    }
            </td>
            <td>
                @using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post))
                    {
                @Html.AntiForgeryToken()
                <input type="hidden" name="userId" value="@user.UserId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                    }
            </td>
        </tr>
        }
    </tbody>
</table>
