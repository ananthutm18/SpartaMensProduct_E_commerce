@model IEnumerable<SpartaMensProduct.Models.Cart>

@{
    ViewBag.Title = "Cart";
}

<h2>Your Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Price.ToString("C")</td>
            <td>@item.Quantity</td>
            <td>@item.TotalPrice.ToString("C")</td>
        </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-md-6">
        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Continue Shopping</a>
    </div>
    @if (Model.Count() > 0)
    {
    <div class="col-md-6 text-right">
        <a href="@Url.Action("Index", "Checkout")" class="btn btn-primary">Checkout</a>
    </div>
    }

    @using (Html.BeginForm("ClearCart", "Cart", FormMethod.Post))
            {
    @Html.AntiForgeryToken()
    <input type="submit" value="Clear Cart" class="btn btn-warning mt-3" />
            }

</div>
